<div class="container">
  <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <a href="/admin/add-category"><label style="margin: 6em 0em "
            class="badge badge-success px-5 py-3 float-right">Add Category</label></a>
        <h4 class="card-title" style="margin-top: 3em;">Category</h4>

        <table class="table table-hover">
          <thead>
            <tr>
              <th>Category</th>
              <th>Sub-category</th>
              <th>Offer in %</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          {{#each categories}}
          <tbody>
            <tr>
              <td>{{this.category}}</td>
             <td>{{#each this.subCategory}}
                <i class="mdi mdi-radiobox-marked"> {{this}} </i><br> <br>
            {{/each}}</td>
            {{#if this.categoryOffer}}
            <td>{{this.categoryOffer}}</td>
            {{else}}
            <td>No offer added</td>
            {{/if}}
            <td><a href="/admin/edit-category/{{this._id}}"><label class="badge badge-success">Edit</label></a></td>
            <td><a onclick="return confirm('Are you sure to delete {{this.category}} ?')"
                href="/admin/delete-category/{{this.category}}"><label class="badge badge-danger">Delete</label></a>
            </td>
            </tr>

          </tbody>
          {{/each}}
        </table>
      </div>
    </div>
  </div>
</div>