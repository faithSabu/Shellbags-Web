                  <div class="mt-3">
                    {{!-- <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" href="/public-admin/index.html">SIGN IN</a>
                     --}}
                     <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">LOG IN</button>
                  </div>
                  <div class="my-2 d-flex justify-content-between align-items-center">
                    {{!-- <div class="form-check">
                      <label class="form-check-label text-muted">
                        <input type="checkbox" class="form-check-input"> Keep me signed in </label>
                    </div> --}}
                    <a href="#" class="auth-link text-black mt-4">Forgot password?</a>
                  </div>
                  
                </form>
              </div>
            </div>
          </div>
        </div>
