<div class="container">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body" style="margin-top: 5em;">
                <h1 class="card-title">Add Coupon</h1>
                <form class="forms-sample" action="/admin/add-coupon" method="post" >
                    <div class="form-group">
                        <label for="exampleInputName1">Coupon Code</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Coupon-code"
                            name="couponCode">
                    </div>
					<div class="form-group">
                        <label for="exampleInputPassword4">Discount in percentage</label>
                        <input type="number" class="form-control" id="exampleInputPassword4" placeholder="Discount"
                            name="discount">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Start Date</label><br>
                            <input type="date" class="form-control" id="exampleInputName1" name="startDate">
                        </div>

                        <div class="form-group col-md-6">
                            <label>End date</label><br>
                            <input type="date" class="form-control" id="exampleInputName1" name="endDate">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword4">Minimum amount to buy</label>
                        <input type="number" class="form-control" id="exampleInputPassword4" placeholder="Price"
                            name="minBuy">
                    </div>
					<div class="form-group">
                        <label for="exampleInputPassword4">Max-Cap</label>
                        <input type="number" class="form-control" id="exampleInputPassword4" placeholder="Price"
                            name="maxCap">
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
