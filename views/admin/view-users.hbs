<div class="container">
  <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title" style="margin-top: 2.5em;">USERS</h4>
        </p>
        <table class="table table-hover" id="viewUserTable">
          <thead>
            <tr>
              <th>User</th>
              <th>E-mail</th>
              <th>Phone number</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            {{#each users}}
            <tr>
              <td>{{this.fullName}}</td>
              <td>{{this.email}}</td>
              <td>{{this.mobile}}</td>
              {{#if this.block}}
              <td>Blocked</td>
              <td><a href="/admin/unblock/{{this._id}}"><label class="badge badge-danger">Unblock</label></a></td>
              {{else}}
              <td>Active</td>
              <td><a href="/admin/block/{{this._id}}"><label class="badge badge-success">Block</label></a></td>
              {{/if}}
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

