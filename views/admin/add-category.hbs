<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">


    <div class="container">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card mt-5">
                <div class="card-body">
                    <h2 class="card-title">Add Category</h2>

                    <form class="forms-sample" action="/admin/add-category" method="post">
                        <div class="form-group">
                            <label for="exampleInputUsername1">Category</label>
                            <input type="text" class="form-control" id="exampleInputUsername1" placeholder="Category"
                                name="category" required>
                        </div>
                        <div>
                            <a class="btn btn-info btn-sm float-right" href="" id="addSubcategory">Add Subcategory</a>
                        </div>
                        <div>
                            <a class="btn btn-info btn-sm float-right mr-5" href="" id="addCategoryOffer">Add Category Offer</a>
                        </div>
                        <br> <br> <br>
                        <div id="newinput"></div>

                        <button type="submit" class="btn btn-primary mr-2 float-right">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <script>

        $("#addSubcategory").click(function (e) {
            e.preventDefault();
            newRowAdd =
                '<div class="form-group row" id="subCategory">' +
                '<label for="exampleInputEmail2" class="col-sm-2 col-form-label">Sub-category</label>' +
                '<div class="col-sm-8">' +
                '<input type="text" class="form-control" id="exampleInputEmail2" placeholder="Sub-category" name="subCategory" required>' +
                '</div>'+
                '<div class="col-sm-2">' +
                '<button class="btn btn-danger float-right" id="deleteRow" type="button" style="margin: 10px 10px;">' +
                '<i class="bi bi-trash"></i> Delete</button>'+
                 '</div >'+ 
                '</div >';

            $('#newinput').append(newRowAdd);
        });

        $("body").on("click", "#deleteRow", function (e) {
            $(this).parents("#subCategory").remove();
        })
   

        $("#addCategoryOffer").click(function (e) {
            e.preventDefault();
            newRowAdd =
                '<div class="form-group row" id="subCategory">' +
                '<label for="exampleInputEmail2" class="col-sm-2 col-form-label"  style="color: rgb(20, 128, 20);">Category Offer</label>' +
                '<div class="col-sm-8">' +
                '<input type="number" class="form-control" id="exampleInputEmail2" placeholder="Category Offer in %" name="categoryOffer" required>' +
                '</div>'+
                '<div class="col-sm-2">' +
                '<button class="btn btn-danger float-right" id="deleteRow" type="button" style="margin: 10px 10px;">' +
                '<i class="bi bi-trash"></i> Delete</button>'+
                 '</div >'+ 
                '</div >';

            $('#newinput').append(newRowAdd);
        });

        $("body").on("click", "#deleteRow", function (e) {
            $(this).parents("#subCategory").remove();
        })
    </script>

